<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="~/Monitor/Index">
                    Scrape City
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="monitorsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Monitors
                            </a>
                            <div class="dropdown-menu" aria-labelledby="monitorsDropdown">
                                <a class="dropdown-item" href="~/Monitor/Index">Index</a>
                                <a class="dropdown-item" href="~/Monitor/Add">Add</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="brandsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Brands
                            </a>
                            <div class="dropdown-menu" aria-labelledby="brandsDropdown">
                                <a class="dropdown-item" href="~/Brand/Index">Index</a>
                                <a class="dropdown-item" href="~/Brand/Add">Add</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="hangfireDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hangfire
                            </a>
                            <div class="dropdown-menu" aria-labelledby="hangfireDropdown">
                                <a class="dropdown-item" href="~/hangfire">Hangfire Dashboard</a>
                            </div>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
    <div>
        @RenderBody()
        <footer>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
